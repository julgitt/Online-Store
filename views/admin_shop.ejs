<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Our Online Store</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="https://use.fontawesome.com/b3099e8da9.js"></script>
</head>

<body>
    <section id="header">
        <a><h2 class="logo">Our Online Store</h2></a>

        <div>
            <ul id="navbar">
                <li><a href="admin_dashboard">Dashboard</a></li>
                <li><a class="active" href="admin_shop">Shop</a></li>
                <li><a href="/logout">Log Out</a></li>
            </ul>
        </div>
    </section>

    <section id="banner">
        <h2>Shop editor</h2>
    </section>

    <section id="product1" class="section-p1">
        <div class="product-container">
            <%{for(var i = 0; i < elem.length; i++){%>
                <div class="product">
                    <img src="<%= elem[i].imagePath%>" alt="">
                    <div class="desc">
                        <h5><%= elem[i].productName%></h5>
                        <h4>$<%= elem[i].price%></h4>
                    </div>
                    <a href="/shop/delete/<%= elem[i].productId %>"><i class="fa fa-trash icon"></i></a>
                </div>
            <%}} %>
            <div class="product-add">
                <button type="submit" onclick="openPopup()"><i class="fa fa-plus icon"></i></button>
            </div>
            <div class="popup" id="popup">
                <form class="popup-form" action="/addProduct" method="POST" enctype="multipart/form-data">
                    <h1 class="form-title">Add product</h1>
                    <div class="form-input-group">
                        <input type="text" name="productName" class="form-input" autofocus placeholder="Product name" required>
                    </div>
                    <div class="form-input-group">
                        <input type="number" step="0.01" min="0.01" name="price" class="form-input" autofocus placeholder="Price" required>
                    </div>
                    <div class="form-input-group">
                        <input type="file" name="image" accept="image/*" required>
                    </div>
                    <div class="button-row">
                        <button class="normal" type="submit">Add</button>
                        <button class="normal" type="button" onclick="closePopup()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    
    <script>
        let popup = document.getElementById("popup");
        function openPopup(){
            popup.classList.add('open-popup');
        }

        function closePopup(){
            popup.classList.remove('open-popup');
        }
    </script>
    <script src="./script.js"></script>
</body>